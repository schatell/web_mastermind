    <input type="hidden" name="color3" value="">
    <input type="hidden" name="color4" value="">
    <input class="inactive" id="play_button" type="submit" name="code_maker_submit" value="Play!">
  </form>
</div>

<div class="button_wrap" id="code_breaker_menu">
  <h2>CodeBreaker</h2>
  <form id="code_breaker_form" method="get" action="/codebreaker">

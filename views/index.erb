<div class="button_wrap" id="player_type">
  <div class="control" id="codemaker"><p>CodeMaker</p></div>
  <div class="control" id="codebreaker"><p>CodeBreaker</p></div>
</div>

<div class="button_wrap" id="menu">
  <div class="control" id="newgame"><p>NewGame</p></div>
  <div class="control" id="how_to"><p>How to play</p></div>
</div>

<div class="button_wrap" id="code_maker_menu">
  <h2>CodeMaker</h2>
  <div class="code_chooser_wrap">
    <h4>Click the circles to choose a code that the computer will try to find:</h4>
    <div class="pin_wrap">
      <div id="pin1" class="pin"></div>
      <div id="pin2" class="pin"></div>
      <div id="pin3" class="pin"></div>
      <div id="pin4" class="pin"></div>
    </div>
  </div>
  <form id="code_maker_form" method="get" action="/codemaker">
    <input type="hidden" name="color1" value="">
